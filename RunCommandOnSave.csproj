<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- We want particular output and intermediate folders -->

  <PropertyGroup>
    <BaseOutputPath>.out</BaseOutputPath>
    <BaseIntermediateOutputPath>.tmp</BaseIntermediateOutputPath>
  </PropertyGroup>

  <!-- Get path to VS tools -->

  <PropertyGroup>
    <VSToolsPath Condition="'$(VSToolsPath)' == ''">$(MSBuildExtensionsPath32)\Microsoft\VisualStudio\v$(VisualStudioVersion)</VSToolsPath>
    <LangVersion>9.0</LangVersion>
  </PropertyGroup>

  <!-- No signed assembly just yet -->

  <PropertyGroup>
    <SignAssembly>false</SignAssembly>
  </PropertyGroup>

  <!-- Configurations -->

  <PropertyGroup>
    <OutputPath>.out\$(Configuration)\</OutputPath>
    <LangVersion>9.0</LangVersion>
    <ErrorReport>prompt</ErrorReport>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <IntermediateOutputPath>.tmp\$(Configuration)\</IntermediateOutputPath>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'D2019' OR  '$(Configuration)' == 'D2022' ">
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>DEBUG</DefineConstants>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'R2019' OR  '$(Configuration)' == 'R2022' ">
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>

  <!-- Peoject settings -->

  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectTypeGuids>{82b43b9b-a64c-4715-b499-d71e9ca2bd60};{FAE04EC0-301F-11D3-BF4B-00C04F79EFBC}</ProjectTypeGuids>
    <ProjectGuid>{0DF5C8EF-6A1B-4F96-A0A2-8E9880669714}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>RunCommandOnSave</RootNamespace>
    <AssemblyName>RunCommandOnSave</AssemblyName>
    <TargetFrameworkVersion>v4.7.2</TargetFrameworkVersion>
    <GeneratePkgDefFile>true</GeneratePkgDefFile>
    <UseCodebase>true</UseCodebase>
    <IncludeAssemblyInVSIXContainer>true</IncludeAssemblyInVSIXContainer>
    <IncludeDebugSymbolsInVSIXContainer>true</IncludeDebugSymbolsInVSIXContainer>
    <IncludeDebugSymbolsInLocalVSIXDeployment>false</IncludeDebugSymbolsInLocalVSIXDeployment>
    <CopyBuildOutputToOutputDirectory>true</CopyBuildOutputToOutputDirectory>
    <CopyOutputSymbolsToOutputDirectory>true</CopyOutputSymbolsToOutputDirectory>
    <StartAction>Program</StartAction>
    <StartProgram Condition="'$(DevEnvDir)' != ''">$(DevEnvDir)devenv.exe</StartProgram>
    <StartArguments>/rootsuffix Exp</StartArguments>
  </PropertyGroup>

  <!-- Included files -->

  <ItemGroup>
    <Compile Include="Properties\AssemblyInfo.cs" />
    <Compile Include="Src\Events.cs" />
    <Compile Include="Src\Package.cs" />
    <Compile Include="Src\Settings.cs" />
    <Content Include="LICENSE">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="Resources\Icon.png" />
    <None Include="source.extension.vsixmanifest" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Icon.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
  </ItemGroup>

  <!-- Package references for VS2019 versions -->

  <Choose>
    <When Condition="('$(Configuration)'=='D2019' OR '$(Configuration)'=='R2019') AND $(VisualStudioVersion) &lt; 17.0 ">
      <ItemGroup>
        <Reference Include="System" />
        <PackageReference Include="Community.VisualStudio.Toolkit.16" Version="16.0.330" ExcludeAssets="Runtime" />
      </ItemGroup>
    </When>
  </Choose>

  <!-- Package references for VS2022 versions -->

  <Choose>
    <When Condition="('$(Configuration)'=='D2022' or '$(Configuration)'=='R2022') AND $(VisualStudioVersion) &gt;= 17.0">
      <ItemGroup>
        <PackageReference Include="Microsoft.VisualStudio.SDK" Version="17.0.31902.203" ExcludeAssets="runtime" />
        <PackageReference Include="Microsoft.VSSDK.BuildTools" />
        <PackageReference Include="Community.VisualStudio.Toolkit.17" Version="17.0.394" />
      </ItemGroup>
    </When>
  </Choose>

  <!-- Various imports -->

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <Import Project="$(VSToolsPath)\VSSDK\Microsoft.VsSDK.targets" Condition="'$(VSToolsPath)' != ''" />

  <!--

      == Build events ==========

      Pre  -> copy the proper manifest depending on the target: before VS2022 and after
      Post -> Remove 'out' folder (atm unknown who creates it)

  -->

  <PropertyGroup>
    <PreBuildEvent Condition="'$(Configuration)'=='D2019'">copy $(ProjectDir)\2019.manifest $(ProjectDir)\source.extension.vsixmanifest &gt; NUL</PreBuildEvent>
    <PreBuildEvent Condition="'$(Configuration)'=='R2019'">copy $(ProjectDir)\2019.manifest $(ProjectDir)\source.extension.vsixmanifest &gt; NUL</PreBuildEvent>
    <PreBuildEvent Condition="'$(Configuration)'=='D2022'">copy $(ProjectDir)\2022.manifest $(ProjectDir)\source.extension.vsixmanifest &gt; NUL</PreBuildEvent>
    <PreBuildEvent Condition="'$(Configuration)'=='R2022'">copy $(ProjectDir)\2022.manifest $(ProjectDir)\source.extension.vsixmanifest &gt; NUL</PreBuildEvent>
  </PropertyGroup>

  <!-- Remove old 'out' folder name -->

  <PropertyGroup>
    <PostBuildEvent>
rmdir $(ProjectDir)\out /Q /S 2&gt; NUL
echo: 
echo ... Summary ..............................................................................................................................
echo VS Version = $(VisualStudioVersion)
echo Tools path = $(VSToolsPath)
echo ..........................................................................................................................................
echo: 
    </PostBuildEvent>
  </PropertyGroup>
</Project>
